---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <iframe 
  src="/pdfjs/web/viewer.html?file=/pdfs/Syro-Malabar-Liturgy-of-the-Hours.pdf" 
  width="100%" 
  height="800px" 
  style="border: none;">
</iframe>


<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
          <tr>
            <th>Description (Verse Length)</th>
            <th style="border: 1px solid #ccc; padding: 8px;">Reference Page</th>
            <th style="border: 1px solid #ccc; padding: 8px;">Audio File</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>2</td>
            <td style="border: 1px solid #ccc; padding: 8px;">5</td>
            <td style="border: 1px solid #ccc; padding: 8px;">
              <audio controls>
                <source src="/audio/short-verse.mp3" type="audio/mpeg">
                Your browser doesn't support the audio element.
              </audio>
            </td>
          </tr>
        </tbody>
      </table>

    </main>
    <Footer />
  </body>
</html>