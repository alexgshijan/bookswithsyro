---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const SITE_TITLE = 'PDF Archive';
const SITE_DESCRIPTION = 'A searchable archive of public PDFs';

const response = await fetch('https://pdf-archive.alexgshijan.workers.dev/api/pdfs');
const pdfs = await response.json();
const sorted = pdfs.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}

			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
		</style>
	</head>
	<body>
		<Header />
		<main style="width: 960px; margin: 0 auto;">
			<h1>Document Archive</h1>
			<ul style="list-style: none; padding: 0;">
				{sorted.map((pdf) => (
					<li style="margin-bottom: 1.5rem;">
						<a href={`/doc/${pdf.filename}/`} style="text-decoration: none;">
							<h3 style="margin: 0; color: black;">{pdf.title}</h3>
							<p style="margin: 0; color: gray;">
								<FormattedDate date={new Date(pdf.pubDate)} />
							</p>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>