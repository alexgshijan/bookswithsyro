---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const SITE_TITLE = 'PDF Archive';
const SITE_DESCRIPTION = 'A searchable archive of public PDFs';

const response = await fetch('https://pdf-archive.alexgshijan.workers.dev/api/pdfs?ts=${Date.now()}');
const pdfs = await response.json();
const sorted = pdfs.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li a {
        display: block;
        text-decoration: none;
        color: inherit;
      }
      h3 {
        margin: 0 0 0.3rem 0;
        font-size: 1.2rem;
        color: rgb(var(--black));
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.85rem;
      }
      ul li a:hover .desc.truncated,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}

	.desc.truncated {
        margin: 0 0 0.3rem 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
      }

li {
  position: relative;
}
    @media (max-width: 720px) {
        ul li {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main style="width: 960px; margin: 0 auto;">
      <h1>Document Archive</h1>
      <ul>
        {sorted.map((pdf) => (
          <li>
            <a href={`/doc/${pdf.filename}/`} title={pdf.description}>
              <h3>{pdf.title}</h3>
              <p class="desc truncated">
        {pdf.description.length > 140 ? pdf.description.slice(0, 130) + 'â€¦' : pdf.description}
      </p>
              <p class="date">
                <FormattedDate date={new Date(pdf.pubDate)} />
              </p>
            </a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>