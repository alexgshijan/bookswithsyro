---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import pdfs from '../../data/pdfs.json';

export async function getStaticPaths() {
  return pdfs.map((pdf) => ({
    params: { slug: pdf.filename },
    props: { pdf },
  }));
}

const { pdf } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pdf.title} description={pdf.description} />
        <meta name="description" content={pdf.description} />
        <meta name="keywords" content={pdf.tags?.join(', ')} />
        <meta property="og:title" content={pdf.title} />
        <meta property="og:description" content={pdf.description} />
        <meta property="og:type" content="article" />
        <meta property="og:url" content={`https://bookswithsyro.alexgshijan.workers.dev/doc/${pdf.filename}/`} />
        <link rel="canonical" href={`https://bookswithsyro.alexgshijan.workers/doc/${pdf.filename}/`} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{pdf.title}</h1>
			<p><FormattedDate date={new Date(pdf.pubDate)} /></p>
			<p>{pdf.description}</p>
      <iframe 
        src={`pdf.url`}
        width="100%" 
        height="800px" 
        style="border: none;">
      </iframe>
		</main>
		<Footer />
<script type="application/ld+json" is:inline>
  {JSON.stringify({
    "@context": "https://schema.org",
    "@type": "CreativeWork",
    name: pdf.title,
    description: pdf.description,
    datePublished: pdf.pubDate,
    url: `https://bookswithsyro.alexgshijan.workers.dev/doc/${pdf.filename}/`,
    encodingFormat: "application/pdf",
    fileFormat: "application/pdf",
  })}
</script>
	</body>
</html>