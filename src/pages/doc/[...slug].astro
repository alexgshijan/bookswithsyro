---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import pdfs from '../../data/pdfs.json';

export async function getStaticPaths() {
  return pdfs.map((pdf) => ({
    params: { slug: pdf.slug },
    props: { pdf },
  }));
}

const { pdf } = Astro.props;
const PDF_URL = `https://pub-a4150c2d14e34942a7eb22425be6bde0.r2.dev/${pdf.pdfFilename}`;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pdf.title} description={pdf.description} />
        <meta name="description" content={pdf.description} />
        <meta name="keywords" content={pdf.tags?.join(', ')} />
        <meta property="og:title" content={pdf.title} />
        <meta property="og:description" content={pdf.description} />
        <meta property="og:type" content="article" />
        <meta property="og:url" content={`https://https://bookswithsyro.alexgshijan.workers.dev/pdfs/${pdf.slug}/`} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{pdf.title}</h1>
			<p><FormattedDate date={new Date(pdf.pubDate)} /></p>
			<p>{pdf.description}</p>
			<iframe src={PDF_URL} width="100%" height="800"></iframe>
			<p><a href={PDF_URL}>Download PDF</a></p>
		</main>
		<Footer />
	</body>
</html>