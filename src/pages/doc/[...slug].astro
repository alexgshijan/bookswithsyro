---
export const prerender = true;
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { slugify } from '../category/slugify.js';

export async function getStaticPaths() {
  const response = await fetch('https://api.BooksWithSyro.co.uk/api/pdfs');
  const pdfs = await response.json();
  const sorted = pdfs.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));

  return pdfs.map(pdf => ({
    params: { slug: [pdf.filename] }
  }));
}

// Group by category
const categoryMap = {};
for (const pdf of sorted) {
  const category = pdf.category || 'Uncategorised';
  if (!categoryMap[category]) categoryMap[category] = [];
  categoryMap[category].push(pdf);
}
const categories = Object.entries(categoryMap);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        margin: 0 auto;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li a {
        display: block;
        text-decoration: none;
        color: inherit;
      }
      h3 {
        margin: 0 0 0.3rem 0;
        font-size: 1.2rem;
        color: rgb(var(--black));
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.85rem;
      }
      ul li a:hover .desc.truncated,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      .desc.truncated {
        margin: 0 0 0.3rem 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
      }
      .category-section {
        margin-top: 4rem;
      }
      .category-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
      }
      .view-more {
        font-size: 0.9rem;
        color: rgb(var(--accent));
        text-decoration: none;
      }
      .view-more:hover {
        text-decoration: underline;
      }
      li {
        position: relative;
      }
      @media (max-width: 720px) {
        ul li {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Document Archive</h1>

      <section>
        <h2>Most Recent</h2>
        <ul>
          {sorted.slice(0, 6).map((pdf) => (
            <li>
              <a href={`/doc/${pdf.filename}/`} title={pdf.description}>
                <h3>{pdf.title}</h3>
                <p class="desc truncated">
                  {pdf.description.length > 140 ? pdf.description.slice(0, 130) + '…' : pdf.description}
                </p>
                <p class="date">
                  <FormattedDate date={new Date(pdf.pubDate)} />
                </p>
              </a>
            </li>
          ))}
        </ul>
      </section>

      {categories.map(([category, docs]) => (
        <section class="category-section">
          <div class="category-header">
            <h2>{category}</h2>
            <a class="view-more" href={`/category/${slugify(category)}/`}>View more</a>
          </div>
          <ul>
            {docs.slice(0, 6).map((pdf) => (
              <li>
                <a href={`/doc/${pdf.filename}/`} title={pdf.description}>
                  <h3>{pdf.title}</h3>
                  <p class="desc truncated">
                    {pdf.description.length > 140 ? pdf.description.slice(0, 130) + '…' : pdf.description}
                  </p>
                  <p class="date">
                    <FormattedDate date={new Date(pdf.pubDate)} />
                  </p>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </main>
    <Footer />
  </body>
</html>