---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { slugify } from '../../utils/slugify.js';

export async function getStaticPaths() {
  const response = await fetch('https://api.BooksWithSyro.co.uk/api/pdfs');
  const pdfs = await response.json();

  const categories = [...new Set(pdfs.map(p => p.category))];

  return categories.map((category) => ({
    params: { category: slugify(category) },
    props: { category, slug: slugify(category), allPdfs: pdfs },
  }));
}

const { category, allPdfs } = Astro.props;

const filtered = allPdfs.filter((pdf) => pdf.category === category);
const sorted = filtered.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));

const SITE_TITLE = `Category: ${category}`;
const SITE_DESCRIPTION = `Documents in the ${category} category`;
---
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li a {
        display: block;
        text-decoration: none;
        color: inherit;
      }
      h3 {
        margin: 0 0 0.3rem 0;
        font-size: 1.2rem;
        color: rgb(var(--black));
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.85rem;
      }
      ul li a:hover .desc.truncated,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      .desc.truncated {
        margin: 0 0 0.3rem 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
      }
      li {
        position: relative;
      }
      @media (max-width: 720px) {
        ul li {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main style="width: 960px; margin: 0 auto;">
      <h1>{genre}</h1>
      {sorted.length === 0 ? (
        <p>No documents found in this category.</p>
      ) : (
        <ul>
          {sorted.map((pdf) => (
            <li>
              <a href={`/doc/${pdf.filename}/`} title={pdf.description}>
                <h3>{pdf.title}</h3>
                <p class="desc truncated">
                  {pdf.description.length > 140 ? pdf.description.slice(0, 130) + 'â€¦' : pdf.description}
                </p>
                <p class="date">
                  <FormattedDate date={new Date(pdf.pubDate)} />
                </p>
              </a>
            </li>
          ))}
        </ul>
      )}
    </main>
    <Footer />
  </body>
</html>